# Display only ifname and ipv4 address it assgined
ip -o a s | awk '{if ($3 == "inet") print $2 "\t" $4}'

# Get number of letters in the alphabeth 
declare -a letters=({a..z}); echo "${#letters[@]}";		# get number of letters in the alphabeth

# Copying file
cp id_rsa{,1}.pub		# great

# ln treatest relative path in relation to the destination file
ls -l 
 file1
 file2
 test/

ln -s ../file1 test/
ls -l test/
 file1 -> ../file1


# Show "apt search" output within a one line
apt search php7.2 2> /dev/null | head  | sed '1,2d; /^\s*$/d' | perl -p -e 's/\/.*//;'

# Checking for leftover withing a variable
#
# From /usr/sbin/apache2ctl
if test ${0##*apache2ctl-} != $0			
#
# if "*apache2ctl-" string was stripped it is already not equals to $0
then 
	APACHE_CONFDIR=/etc/apache2-${0##*apache2ctl-}		# name of the version number
 else
 	APACHE_CONFDIR=/etc/apache2
 fi

 # Removing preceding path
${var##*/}			# all until '/'
